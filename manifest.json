{
    "manifest_version": 2,
    "version": "1.0",
    "name": "owasp_test_extention",
    "description":"Test extention that does not allow access to any other browser tab/ window during test",


    "permissions":[
        "storage",
        "webRequest",
        "webRequestBlocking",
        "*://*/*"

    ],
    "content_scripts":[
        {
            "matches":["http://example.com/*"],
            "js":["content.js"]
        }
    ],

    "background":{
        "scripts":["background.js"]

    },
    "browser_action":{
        "default_icon":"icon.png"
    }


}